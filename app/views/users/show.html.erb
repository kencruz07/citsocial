<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>Posts by <%= @user.name %>:</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-1 col-xs-offset-3">
    <h5><%= link_to "Following: #{@user.following.count}", following_user_path(@user)%></h5>
  </div>
  <div class="col-xs-1">
    <h5><%= link_to "Followers: #{@user.followers.count}", followers_user_path(@user)%></h5>
  </div>
</div>

<%= render @user.posts.latest %>
