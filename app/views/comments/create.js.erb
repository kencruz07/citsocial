$('<%= escape_javascript(render @comment) %>').
  prependTo('.comment-index[data-post-id=<%= @comment.post.id %>]');
$('#comment-create-content').val('');
$('.comment-show-link[data-post-id=<%= @comment.post.id %>]').
  text('<%= @comment.post.commenters.upcase %>');

if(<%= @post.comments.count %> != 0){
  $('.comment-hide-container[data-post-id=<%= @comment.post.id %>]').removeClass('hidden');
}
