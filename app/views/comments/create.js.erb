$('<%= escape_javascript(render @comment) %>').
  prependTo('.js-comment-index[data-post-id=<%= @comment.post.id %>]');
$('.js-comment-create-content').val('');
$('.js-comment-show-link[data-post-id=<%= @comment.post.id %>]').
  text('<%= @comment.post.commenters.upcase %>');

if(<%= @post.comments.count %> != 0){
  $('.js-comment-hide-container[data-post-id=<%= @comment.post.id %>]').removeClass('hidden');
}
