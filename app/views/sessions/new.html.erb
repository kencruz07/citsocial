<h1>Log In</h1>

<%= form_tag log_in_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Login", class: "btn btn-primary" %>
  <br/>
  <%= link_to "Sign Up", new_user_path, :method => :delete%>
<% end %>
