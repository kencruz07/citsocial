.row
  .col-xs-12
    %h1.text-center citsocial - Log In

= form_tag log_in_path do
  .row
    .col-xs-1.col-xs-offset-3
      = label_tag :email
    .col-xs-5
      = text_field_tag :email, params[:email],
        :class => 'form-control input-lg text-center'
  %br
  .row
    .col-xs-1.col-xs-offset-3
      = label_tag :password
    .col-xs-5
      = password_field_tag :password, params[:password],
        :class => 'form-control input-lg text-center'
  %br
  .row
    .col-xs-3.col-xs-offset-3
      = submit_tag 'Log In', :class => 'btn btn-primary btn-block'
    .col-xs-3.link-to-sign-up
      = link_to 'Sign Up', new_user_path, :class => 'btn btn-default btn-block'
  %br
