<div class="row">
  <div class="col-xs-6 col-xs-offset-3"><h1>Write post: </h1></div>
</div>

<%= form_for @post do |f| %>
  
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= f.text_field :title, :class => "form-control input-lg", :placeholder => "Title" %>      
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= f.text_area :content, :class => "form-control", :rows => "5", :style => "resize: none;", :placeholder => "Content" %>      
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-3 col-xs-offset-3">
     <%= f.submit "Post", id: "post_button", :class => "btn btn-primary btn-block" %>
    </div>
  </div>
  
<% end %>