<div class='row'>
	<div class='col-xs-6 col-sm-offset-3'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <%= link_to "#{post.user.name}:", user_path(post.user), :class => "post-user"%>
        <% if current_user == post.user %>
          <div class='btn-group pull-right'>
            <button type='button' class='btn btn-primary btn-xs dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
             <span class='caret'></span>
            </button>
            <ul class='dropdown-menu'>
              <li><%= link_to 'Edit', edit_post_path(post) %></li>
              <li role='separator' class='divider'></li>
              <li><%= link_to 'Delete', post, :method => :delete %></li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class='panel-body'>
        <p class="post-title"><%= link_to post.title, post %></p>
        <p class='post-content'><%= post.content %></p>
      </div>
      <div class='panel-footer'>
        <span>. . .</span>
        <span class='pull-right'><%= post.created_at.in_time_zone 'Hong Kong'%></span>
      </div>
    </div>
  </div>
</div>
