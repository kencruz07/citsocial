<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>
      Posts by other users:
    </h1>
  </div>
</div>

<% @post.each do |post| %>  
  <div class="row">
  	<div class="col-xs-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "#{post.user.display_full_name}:", :controller => :users, :action => :show, :id => post.user.id %>
        </div>
        <%= link_to :controller => :posts, :action => :show, :id => post.id do %>
          <div class="panel-body"> 
            <h3 style="margin-top: 0"><u><%= post.title %></u></h3>       
            <p class="lead"><%= post.content %></p>
          </div>
        <% end %>
        <div class="panel-footer">
          <% if current_user == post.user %>
            <%= link_to "Delete", { :controller => :posts, :action => :destroy, :id => post.id }, :method => :delete, :class => "btn btn-danger btn-xs pull-right" %>
            <%= link_to "Edit", { :controller => :posts, :action => :edit, :id => post.id }, :class => "btn btn-info btn-xs pull-right" %>
          <% end %>
          <p class=""><%= post.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>