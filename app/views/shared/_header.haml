.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      = link_to 'citsocial', posts_path, :class => 'navbar-brand navbar-left'
    - if session[:user_id].present?
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{:href => '#',
            :data => {:toggle => 'dropdown'},
            :role => 'button',
            :aria => {:haspopup => 'true'},
            :aria => {:expanded => 'false'}}
            Discover
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Users', users_path
        %li.dropdown
          %a.dropdown-toggle{:href => '#',
            :data => {:toggle => 'dropdown'},
            :role => 'button',
            :aria => {:haspopup => 'true'},
            :aria => {:expanded => 'false'}}
            = current_user.name
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Profile', user_path(current_user)
            %li.divider{:role => 'separator'}
            %li= link_to 'Log Out', log_out_path, :method => :delete

